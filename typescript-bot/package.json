{
  "name": "four-meme-copy-trading-bot",
  "version": "1.0.0",
  "description": "Four.meme copy trading bot for BNB Chain. Mirror target wallets on Four.meme and PancakeSwap. TypeScript.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "pancakeswap": "tsx src/index.ts --dex=pancakeswap",
    "fourmeme": "tsx src/index.ts --dex=fourmeme",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "keywords": [
    "four.meme copy trading bot",
    "four meme copy trading",
    "four.meme copy trading",
    "4meme copy trading",
    "four meme bot",
    "pancakeswap copy trading",
    "bnb chain copy trading",
    "meme coin copy trading",
    "binance",
    "bnb-chain",
    "pancakeswap",
    "copy-trading",
    "crypto",
    "defi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.9.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
